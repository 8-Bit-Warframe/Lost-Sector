{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Dethsquare Engine Animation",
	"description": "Data about an entity in a Dethsquare Engine game",
	"definitions": {
		"defaults": {
			"type": "object",
			"properties": {
				"width": {
					"type": "number"
				},
				"height": {
					"type": "number"
				},
				"offset": {
					"type": "object",
					"properties": {
						"x": {
							"type": "number"
						},
						"y": {
							"type": "number"
						}
					},
					"required": [
						"x",
						"y"
					]
				},
				"duration": {
					"type": "number"
				}
			},
			"required": [
				"width",
				"height",
				"offset",
				"duration"
			]
		}
	},
	"type": "object",
	"properties": {
		"extends": {
			"type": "string"
		},
		"defaults": {
			"$ref": "#/definitions/defaults"
		},
		"animations": {
			"type": "array",
			"items": {
				"title": "Animation",
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"defaults": {
						"$ref": "#/definitions/defaults"
					},
					"sprites": {
						"type": "array",
						"items": {
							"title": "Sprite",
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"width": {
									"type": "number"
								},
								"height": {
									"type": "number"
								},
								"offset": {
									"type": "object",
									"properties": {
										"x": {
											"type": "number"
										},
										"y": {
											"type": "number"
										}
									},
									"required": [
										"x",
										"y"
									]
								},
								"duration": {
									"type": "number"
								}
							},
							"required": [
								"name"
							]
						}
					},
					"type": {
						"enum": [
							"LOOP",
							"ONE_SHOT",
							"OSCILLATE",
							"CUSTOM"
						]
					}
				},
				"required": [
					"name",
					"sprites",
					"type"
				]
			}
		}
	}
}